{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "target": "ESNext",
    "lib": ["ES2023"],
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["vite.config.ts", "bin"]
}